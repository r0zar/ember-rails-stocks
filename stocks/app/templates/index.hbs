<h1>Ember-Rails-Stocks!</h1>

<div class="well">
    <ul class="nav nav-pills">
      {{#link-to 'index' tagName="li"}}<a href="">Search View</a>{{/link-to}}
    </ul>
</div>

{{#power-select
  options=model
  searchPlaceholder="Type to filter..."
  searchField="name"
  selected=target
  onchange=(action "chooseStock")
  as |stock|
}}
  <strong> {{stock.symbol}} </strong> {{stock.name}}
{{/power-select}}

<p>{{target.symbol}}</p>

{{ember-chart 
  type='Bar'
  data=chartData 
  height=500 
  width=800
}}

{{outlet}}
