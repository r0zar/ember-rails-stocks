<h2>Search for a stock</h2>

{{#power-select
  options=model
  searchPlaceholder="Type to filter..."
  searchField="name"
  selected=target
  onchange=(action "chooseStock")
  as |stock|
}}
  <strong> {{stock.symbol}} </strong> {{stock.name}}
{{/power-select}}

<p>{{target.symbol}}</p>

{{ember-chart 
  type='Bar'
  data=chartData 
  height=500 
  width=800
}}
